@{
    ViewData["Title"] = "AddProduct";
}
@model Product

<div class="row my-3">

    <h3 class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-database-fill-add me-3" viewBox="0 0 16 16">
            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0ZM8 1c-1.573 0-3.022.289-4.096.777C2.875 2.245 2 2.993 2 4s.875 1.755 1.904 2.223C4.978 6.711 6.427 7 8 7s3.022-.289 4.096-.777C13.125 5.755 14 5.007 14 4s-.875-1.755-1.904-2.223C11.022 1.289 9.573 1 8 1Z" />
            <path d="M2 7v-.839c.457.432 1.004.751 1.49.972C4.722 7.693 6.318 8 8 8s3.278-.307 4.51-.867c.486-.22 1.033-.54 1.49-.972V7c0 .424-.155.802-.411 1.133a4.51 4.51 0 0 0-4.815 1.843A12.31 12.31 0 0 1 8 10c-1.573 0-3.022-.289-4.096-.777C2.875 8.755 2 8.007 2 7Zm6.257 3.998L8 11c-1.682 0-3.278-.307-4.51-.867-.486-.22-1.033-.54-1.49-.972V10c0 1.007.875 1.755 1.904 2.223C4.978 12.711 6.427 13 8 13h.027a4.552 4.552 0 0 1 .23-2.002Zm-.002 3L8 14c-1.682 0-3.278-.307-4.51-.867-.486-.22-1.033-.54-1.49-.972V13c0 1.007.875 1.755 1.904 2.223C4.978 15.711 6.427 16 8 16c.536 0 1.058-.034 1.555-.097a4.507 4.507 0 0 1-1.3-1.905Z" />
        </svg>Add Product
    </h3>

    <div class="d-flex justify-content-center">

        <form asp-controller="Products" asp-action="CreateProduct" class="w-25" method="post">
            <div class="mb-2">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" required />
            </div>

            <div class="mb-2">
                <label asp-for="Price">Price</label>
                <input type="number" asp-for="Price" class="form-control" min="1" required />
            </div>

            <div class="mb-2">
                <label asp-for="Stock">Stock</label>
                <input type="number" asp-for="Stock" class="form-control" min="1" required />
            </div>

            <div class="mb-2">
                <label asp-for="Color">Color</label>
                <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect" >
                    <option value="">Renk seçiniz</option>
                </select>
            </div>

            <div class="form-check form-switch mt-3 mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsPublish" role="switch">
                <label class="form-check-label" asp-for="IsPublish">Is Published ?</label>
            </div>



            <div class="my-3">
                <p class="fw-bold sm-font"> Duration of Publish Time:</p>
                <div class="d-flex justify-content-evenly">

                    @foreach (var item in ViewBag.PublishExpireTime as Dictionary<string, int>)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="PublishExpireTime" id="Expire@(item.Value)" value="@item.Value">
                            <label class="form-check-label" asp-for="PublishExpireTime" for="Expire@(item.Value)">
                                @item.Key
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Features of product:" asp-for="Description"></textarea>
                <label asp-for="Description">Features of product:</label>
            </div>
            
            <div class="mb-3">
                <label asp-for="PublishedTime" class="">Published Time</label>
                <input asp-for="PublishedTime" class="form-control" />
            </div>

            @*Submit button*@
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary ">Add</button>
            </div>


        </form>

    </div>

</div>  